#!/bin/bash
# wmenu launcher with Nordic-Storm theme colors

# Nordic-Storm colors (from labwc theme)
BG_NORMAL="#1e1e1e"      # menu.items.bg.color
FG_NORMAL="#E5E2DC"      # menu.items.text.color
BG_SELECTED="#A8B5C0"    # menu.items.active.bg.color (light gray-blue)
FG_SELECTED="#1e1e1e"    # menu.items.active.text.color (dark)

# Launch wmenu with Storm theme
wmenu-run \
	-N "$BG_NORMAL" \
	-n "$FG_NORMAL" \
	-M "$BG_NORMAL" \
	-m "$FG_NORMAL" \
	-S "$BG_SELECTED" \
	-s "$FG_SELECTED" \
	-p "ï„µ " \
	"$@"
