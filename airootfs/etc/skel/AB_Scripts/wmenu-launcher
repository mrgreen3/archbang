#!/bin/bash
# wmenu launcher with Nordic-Mocha theme colors

# Nordic-Mocha colors (from labwc theme)
BG_NORMAL="#313244"      # menu.items.bg.color
FG_NORMAL="#a6adc8"      # menu.items.text.color
BG_SELECTED="#89b4fa"    # menu.items.active.bg.color (blue)
FG_SELECTED="#11111b"    # menu.items.active.text.color (dark)

# Launch wmenu with Mocha theme
wmenu-run \
	-N "$BG_NORMAL" \
	-n "$FG_NORMAL" \
	-M "$BG_NORMAL" \
	-m "$FG_NORMAL" \
	-S "$BG_SELECTED" \
	-s "$FG_SELECTED" \
	-p "ðŸš€ " \
	"$@"
