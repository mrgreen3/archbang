<?xml version="1.0"?>
<menu>

<item label="󰆍  Terminal">
  <action name="Execute">
    <command>foot</command>
  </action>
</item>

<item label="󰈹  Browser">
  <action name="Execute">
    <command>firefox</command>
  </action>
</item>

<item label="󰉋  File Manager">
  <action name="Execute">
    <command>thunar</command>
  </action>
</item>

<item label="󰨙  Editor">
  <action name="Execute">
    <command>l3afpad</command>
  </action>
</item>

<!-- Installation -->
<item label="󰚀  Install">
  <action name="Execute">
    <command>foot --title WayBang-Installer -e sudo -EH ~/AB_Scripts/abinstall</command>
  </action>
</item>

<separator/>

<submenu label="Applications">
  <!-- Applications can be added manually or via xdg-menu if available -->
</submenu>

<separator/>

<submenu label="Settings">
  <item label="GParted">
    <action name="Execute">
      <command>~/AB_Scripts/gparted-launcher</command>
    </action>
  </item>
  <item label="System">
    <action name="Execute">
      <command>foot --title System-Information -e btop</command>
    </action>
  </item>
  <item label="Panel">
    <action name="Execute">
      <command>l3afpad ~/.config/waybar/config</command>
    </action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure"/>
  </item>
</submenu>

<submenu label="Exit">
  <item label="󰍃  Log Out">
    <action name="Exit"/>
  </item>
  <item label="󰜉  Reboot">
    <action name="Execute">
      <command>systemctl reboot</command>
    </action>
  </item>
  <item label="󰐥  Poweroff">
    <action name="Execute">
      <command>systemctl poweroff</command>
    </action>
  </item>
</submenu>

</menu>
