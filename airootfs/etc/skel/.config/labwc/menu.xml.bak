<?xml version="1.0"?>
<openbox_menu>

<menu id="root-menu" label="Menu">

  <item label="Terminal">
    <action name="Execute" command="foot"/>
  </item>

  <item label="Browser">
    <action name="Execute" command="firefox"/>
  </item>

  <item label="File Manager">
    <action name="Execute" command="thunar"/>
  </item>

  <separator/>

  <menu id="applications" label="Applications" execute="xdg_menu --format openbox3-pipe --root-menu /etc/xdg/menus/arch-applications.menu" />

  <separator/>

  <menu id="settings-menu" label="Settings">
    <item label="Reconfigure">
      <action name="Reconfigure"/>
    </item>
  </menu>

  <menu id="power-menu" label="Power">
    <item label="Lock">
      <action name="Execute" command="swaylock -f"/>
    </item>
    <item label="Logout">
      <action name="Exit"/>
    </item>
    <item label="Reboot">
      <action name="Execute" command="systemctl reboot"/>
    </item>
    <item label="Shutdown">
      <action name="Execute" command="systemctl poweroff"/>
    </item>
  </menu>

</menu>

</openbox_menu>
